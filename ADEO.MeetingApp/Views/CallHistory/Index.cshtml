@model CallHistoryModel

@{
    ViewBag.PageTitle = "Call History Dashboard";
    await Html.RenderPartialAsync("_MeetingDetailsPartial", Model.MeetingDetails);
}

<div class="main-card mb-3 card">
    <div class="card-body">
        <table style="width: 100%;" id="historyList" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>History ID</th> 
                    <th>Attendee Name</th>
                    <th>Called On</th>
                    <th>Call Ended On</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var history in Model.CallHistory)
                {
                    <tr>
                        <td>@history.ID</td> 
                        <td>@history.Attendees.FullName</td>
                        <td>@history.CalledOn</td>
                        <td>@history.CallEndedOn</td> 
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>